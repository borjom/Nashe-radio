<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#f1f2f3"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:id="@+id/position_text_view"
        android:textColor="#999"
        android:textSize="20sp"
        android:text="1"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state_text_view"
        android:text="1"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_text_view"
        android:layout_toRightOf="@+id/position_text_view"
        android:layout_toLeftOf="@+id/state_image_view"
        android:text="asdfa asdf asdf asd asd fasdf asdf asdf asdf asdf asdf asd"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#2d2d2d"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state_image_view"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/state_text_view" />


</RelativeLayout>